string="india is a good country"
sentence_split=string.split()
print(sentence_split)

capitalized=''
for i in range(len(sentence_split)):
    cap=sentence_split[i].capitalize()
    capitalized+=cap + ' '
print(capitalized)

  output- India Is A Good Country

----------------------------------------------------------------------

csv_string="Alice,342,bob"
test=csv_string.split(",")
print(test)

output = ['Alice', '342', 'bob']
