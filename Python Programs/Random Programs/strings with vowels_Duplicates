def replace_vowel_with_number():
    
    try:
        
        for i in range(3):
            vowels="aeiou"
            replace_vowels={'a':'p','e':'g','i':'p','o':'r','u':'q'}
            data=str(input("enter the string\n"))
            words=data.lower().split()
            print("Original word is",*words)
        
            modified_word=[]
        
            for word in words:
                for char in word:
                    if char in vowels:
                        #replace vowels in words with a=1,e=2,i=3
                        modified_word+=str(replace_vowels[char])
                    else:
                        modified_word+=char
        
        #print(*modified_word)
        
            modified_sentence="".join(modified_word)
            print("Modified sentence is",modified_sentence)
                
                
    except Exception as e:
        
        print(e)

replace_vowel_with_number()
----------------------------------------------------------------------------------------

Replace the vowels with ts position in alphabets:

def replace_vowel_with_its_position():
    
    try:
        
        for i in range(1):
            vowels="aeiou"
            
            data=str(input("enter the string\n"))
            words=data.lower().split()
            print("Original word is",*words)
        
            modified_words=[]
        
            for word in words:
                modified_word=[]
                for index,char in enumerate(word,start=1):
                    if char in vowels:
                        modified_word+=str(index)
                    else:
                        modified_word+=char
                        
        modified_words.append(modified_word)           
                       
        print(modified_words)        
                
    except Exception as e:
        
        print(e)

replace_vowel_with_its_position()
-----------------------------------------------------------------------------------------
REplace vowels with symbols:
def replace_vowel_with_symbol():
    try:
        vowels = "aeiou"
        symbol = "*"
        
        for i in range(3):  # Loop 3 times for input
            data = input("Enter the string:\n")
            words = data.lower().split()
            print("Original words:", *words)
        
            modified_words = []
        
            for word in words:
                modified_word = ""
                for char in word:
                    if char in vowels:
                        modified_word += symbol  # Replace vowel with a symbol
                    else:
                        modified_word += char  # Keep consonants as they are
                modified_words.append(modified_word)
        
            # Print modified result
            print("Modified words:", *modified_words)
    
    except Exception as e:
        print("Error:", e)

replace_vowel_with_symbol()

    
    
