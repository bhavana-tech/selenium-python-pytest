def sum_of_numbers(numbers):
    try:

        numeric_numbers=[int(num) for num in numbers]
        
        return f'The sume is {sum(numeric_numbers)}'
            
    except ValueError as e:
        return f"An error occured{str(e)}"

    finally:
        print("sum is done")
#f is a format string
for i in range(5):
    input_string=input("Enter the numbers")
    data = input_string.strip().split()
    result = sum_of_numbers(data)
    print(result)
-----------------------------------------------------------------------------------
class NoValueError(Exception):
    pass

class NotANumberError(Exception):
    pass

class NotAListError(Exception):
    pass

def sum_of_numbers(numbers):
    
    try:
        
        if len(numbers) ==0:
            raise NoValueError("No Values provided")
            
        if not isinstance(numbers,list):
            raise NotAListError("Please enter list of numbers")
            
        for num in numbers:
            if not isinstance(num,(int,float)):
                raise NotANumberError("Please enter numerical numbers")
            
        return sum(numbers)
        
    except (NotANumberError,NoValueError,NotAListError) as e:
        print(e)

for i in range(5):
    input_string=input("Enter numericals data")
    data_string=input_string.strip().split()
    
    numeric_data=[]
    for x in data_string:
        try:
            numeric_data.append(int(x))
        except ValueError as e:
            print(f"Invalid input, {x} is invalid, so skipped")
            
    total=sum_of_numbers(numeric_data)
    print("Total is",total)

