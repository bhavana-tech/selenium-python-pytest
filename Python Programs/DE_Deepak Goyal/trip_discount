# Question 4: A travel company charges $250 per person for a weekend trip and gives a $100 group discount for every 5 people. If a group has 15 people Calculate the total cost for the group and store it in group_trip_cost.


class NoValueError(Exception):
    pass


class NoStringValue(Exception):
    pass

class ZeroStringError(Exception):
    pass


def trip():
    
    try:
        
        for i in range(2):
            
            total_people=int(input("Enter the total number of persons going to trip"))
            price_per_person=int(input("Enter the price per person"))
            dicount_per_group=int(input("Enter the total discount per group"))
            number_per_group=int(input("Enter the number od persons under each group"))
            
            if not isinstance(total_people,int):
                raise NoValueError
                
                
            total_price=total_people * price_per_person
            total_discount=total_people//5 * dicount_per_group
            total_price-=total_discount
            print(total_price)
        return total_price
            
    except Eception as e:
        print(e)
            
    finally:
        print("done!")
        
trip()
